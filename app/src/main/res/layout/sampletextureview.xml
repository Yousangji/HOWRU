<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".View.viewer">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/resolution_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resolution"
            android:textSize="40px"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:layout_below="@+id/sample_app_title"
            android:gravity="center_horizontal"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OPEN URL"
                android:id="@+id/tvOpenURL"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/etVieoURL"
                android:layout_weight="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Load"
                android:id="@+id/ptnLoad"
                android:onClick="loadVideo" />
        </LinearLayout>
    </LinearLayout>

    <jp.satorufujiwara.player.VideoTextureView
        android:id="@+id/player_view"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:use_controller="false"
        app:resize_mode="fill"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recychatmsg"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:listSelector="#00000000"
            android:cacheColorHint="#00000000"
            android:divider="#000000"
            android:transcriptMode="alwaysScroll"
            android:layout_gravity="bottom"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            >

            <ImageView
                android:id="@+id/btnchat_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:src="@drawable/add"
                android:onClick="true"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLines="4"
                android:ems="10"
                android:id="@+id/editchat_text"
                android:layout_weight="0.4"/>

            <ImageView
                android:id="@+id/btnchat_sbm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/done"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>